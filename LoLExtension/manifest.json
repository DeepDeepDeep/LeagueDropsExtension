{
  "manifest_version": 2,
  "name": "LoL Stream Opener",
  "version": "1.7.0",
  "description": "Automatically opens games on lolesports.com in a new window.",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "https://leaguewatcher.onrender.com/*",
    "https://lolesports.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
