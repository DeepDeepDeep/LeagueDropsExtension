{
  "manifest_version": 3,
  "name": "LoL Stream Opener",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://leaguedrops.onrender.com/*",
    "https://lolesports.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
